package floatslider

templ FloatSlider(opts *FloatSliderOpts) {
  <div class="flex flex-row gap-3 my-3 form-control" x-data={ opts.AlpineValue() }>
    <div class="basis-1/5">
      <label class="label" for="delay_time">
        <span class="label-text text-lg">{ opts.Label }:</span>
      </label>
    </div>
    <div class="basis-3/5 align-middle">
      <input name="delay_time" type="range" min={ opts.MinStr() } max={ opts.MaxStr() } step={ opts.StepStr() } class="range range-primary" x-model="value" />
    </div>
    <div class="basis-1/5">
      <div class="join">
        <div>
          <input type="number" min={ opts.MinStr() } max={ opts.MaxStr() } step={ opts.StepStr() } class="input input-bordered input-primary input-sm w-full max-w-xs text-right" x-model="value" />
        </div>
        <div class="mx-2 align-middle">
          { opts.Unit }
        </div>
      </div>
    </div>
  </div>

  <div class="flex flex-row">
    <div class="text-sm">
      if opts.Optional {
        <span class="italic">Optional</span>. &nbsp;
      }
      { opts.Descr }
    </div>
  </div>
}
